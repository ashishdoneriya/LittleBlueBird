<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.littlebluebird.phonegap.facebook"
        versionCode = "10"
        version     = "0.1.1">
 
    <name>LittleBlueBird</name>
 
    <description>
        LittleBlueBird is your online wish list for every occasion
    </description>
 
    <author href="http://www.littlebluebird.com" email="bdunklau@yahoo.com">
        Brent Dunklau
    </author>
    
    <preference name="phonegap-version" value="2.9.0" />
    
    <icon src="img/LittleBlueBird-icon.png"/>
    
    <gap:plugin name="com.phonegap.plugins.facebookconnect">
       <param name="APP_ID" value="136122483829" />
       <param name="APP_NAME" value="LittleBlueBird" />
    </gap:plugin>
    
    
    <!-- iOS only -->
    <plugin name="SplashScreen" value="CDVSplashScreen" />
    
 
    <access origin="http://www.littlebluebird.com" browserOnly="true" /> <!-- allows the app to access www.littlebluebird.com -->
    
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
 
</widget>